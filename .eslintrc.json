{
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["airbnb", "airbnb-typescript"]
    }
  ],

  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "airbnb-typescript"],

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json",
    "tsconfigRootDir": "_dirname"
  },
  "plugins": ["react"],
  "rules": {}
}
